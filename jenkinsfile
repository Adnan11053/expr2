pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'python3 --version'
            }
        }
        stage('Run Python Script') {
            steps {
                echo 'Running Python script...'
                // Use python3 or python based on your environment
                sh 'python3 script.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                sh 'python3 script.py'
            }
        }
    }
}

